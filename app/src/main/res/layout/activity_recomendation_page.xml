<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp">

        <!-- Image Section -->
        <ImageView
            android:id="@+id/fieldImage"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_weight="1"
            android:src="@drawable/crop_image"
            android:scaleType="centerCrop"
            android:contentDescription="Field Image" />

        <!-- Form Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crop Recommendation System"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp" />

            <!-- Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <EditText
                    android:id="@+id/inputNitrogen"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Nitrogen (N)"
                    android:inputType="numberDecimal" />

                <EditText
                    android:id="@+id/inputPhosphorus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Phosphorus (P)"
                    android:inputType="numberDecimal"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/inputPotassium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Potassium (K)"
                    android:inputType="numberDecimal" />

                <EditText
                    android:id="@+id/inputTemperature"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Temperature (Â°C)"
                    android:inputType="numberDecimal"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Row 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/inputHumidity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Humidity (%)"
                    android:inputType="numberDecimal" />

                <EditText
                    android:id="@+id/inputPH"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="pH Level"
                    android:inputType="numberDecimal"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Row 4 -->
            <EditText
                android:id="@+id/inputRainfall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Rainfall (mm)"
                android:inputType="numberDecimal" />

            <!-- Button -->
            <Button
                android:id="@+id/btnRecommend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Get Recommendation"
                android:backgroundTint="#28A745"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
